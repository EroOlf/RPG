<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.rpggraphic.Controllers.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Welcome to RPG_Lite_3000_Evolved !"/>
    <Label fx:id="choiceText" text="Choose the number of heroes :"/>
    <Label fx:id="nbHeroesText" />
    <Slider fx:id="sliderNumberHeroes"/>
    <Button text="Launch Game" onAction="#onStartButtonClick"/>

</VBox>
